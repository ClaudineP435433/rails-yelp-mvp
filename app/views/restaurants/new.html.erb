<h2>Add a Restaurant</h2>

<div class="container">
  <%= simple_form_for [@restaurant] do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :phone_number %>
    <%= f.input :category, collection: Restaurant::CATEGORIES, prompt: true%>
    <%= f.button :submit, class: "btn btn-primary"%>
  <% end %>
</div>
