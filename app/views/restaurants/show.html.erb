<h2><%= @restaurant.name %></h2>
<div class="resto_show">
  <div class="card">
    <h4>Contacts</h4>
    <p><%= @restaurant.address %></p>
    <p><%= @restaurant.phone_number %></p>
  </div>

  <div class="card">
    <h4>Category</h4>
    <p><%= @restaurant.category %></p>
  </div>
</div>
<hr>

<h3>⭐️  Reviews ⭐️</h3>

<div class="review-show">
  <ul>
    <% @reviews.each do |review| %>
      <li><%= "⭐️" * review.rating %><%= review.content %></li>
    <% end %>
  </ul>
</div>

<div class="container">
  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :content %>
    <%= f.input :rating, collection: [0,1,2,3,4,5], prompt: true%>
    <%= f.button :submit, class: "btn btn-primary"%>
  <% end %>
</div>

